<div class="event">
	<div class="pagetitle">
		<h1><%= @place.name %></h1>
	</div>

	<div class="eventdescription">
		<p><%= @event.description %></p>
	</div>
</div>

<% if current_user == nil %>
	<%= render 'join_eventform' %>
<% end %>

<div class="container">

	<div class="table">
		<div class="row">
			<div class="col-md-4">
				<h3>People Going!</h3>
				<% @event.users.each do |user| %>
					<div class="attending"> <%= user.email %> </div>
					<hr>
				<% end %>
			</div>
			<div class="col-md-8">
				<div  class="gmaps">
					<div style="width: 600px" center>
						<div id="map" style="width: 100%; height: 400px"></div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="table">
		<div class="row">
					<!-- Shows all the posts for this event --> 
					<%= render 'form' %>
					<!-- Shows all the posts for this event --> 
			</div>
	</div>

</div>
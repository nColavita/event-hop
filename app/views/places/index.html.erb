<div class="pagetitle">
	<h1>Welcome to Event Hop</h1>
	<h2>We make planning events around the city fun!</h2>
</div>

<div class="container">
	<div class="row">
		<% @places.each do |place| %>
			<div class="col-md-4">
				<h1><%= place.name %></h1>
					<div class="image img-responsive"> 
						<%= link_to (image_tag place.avatar.url(:medium)), new_place_event_path(place) %>
					</div>
				<p><%= place.description%></p>
			</div>
		<% end %>
	</div>
</div>

